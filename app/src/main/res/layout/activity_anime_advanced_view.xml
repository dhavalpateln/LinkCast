<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explorer.AdvancedView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/anime_advanced_view_anime_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:transitionName="animeImage"
            android:contentDescription="TODO"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/anime_advanced_view_anime_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.mediarouter.app.MediaRouteButton
                android:id="@+id/mediaRouteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/advanced_view_source_selector"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Source"
                app:hintAnimationEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent">
                <AutoCompleteTextView
                    android:id="@+id/advanced_view_source_selector_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>-->

            <!--<Button
                android:id="@+id/advanced_options_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:onClick="showOptions"
                android:text="OPTIONS"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />-->

            <TextView
                android:id="@+id/advanced_view_anime_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/advanced_view_anime_title_text_view">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eye"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <Button
                    android:id="@+id/advanced_view_episode_progress_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/0"
                    android:background="#00000000"
                    android:textColor="#FFFFFF"
                    android:drawableTop="@drawable/ic_eye">
                </Button>

                <ImageView
                    android:id="@+id/switch_view_list_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_list_grey"/>

                <ImageView
                    android:id="@+id/switch_view_grid_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_list_grey"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_list_grey"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        app:dividerColor="@color/colorPrimary"/>-->

    <LinearLayout
        android:id="@+id/advanced_view_option_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_border_top_bottom"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" >

        <Button
            android:id="@+id/advanced_view_status_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="1"
            android:text="Status"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/ic_movie" />

        <Button
            android:id="@+id/anime_user_score_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:onClick="updateScore"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/ic_thumb">
        </Button>

        <Button
            android:id="@+id/anime_info_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MAL"
            android:drawableTop="@drawable/ic_info"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:onClick="animeInfo"/>

        <Button
            android:id="@+id/anime_info_button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="More"
            android:drawableTop="@drawable/ic_info"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:onClick="showOptions"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/episodeChipGroupHorizontalScrollView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advanced_view_option_linear_layout">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/episodeChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.LinkCastChip"
            android:visibility="gone"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:singleLine="true">

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/anime_advanced_view_episode_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodeChipGroupHorizontalScrollView" />


</androidx.constraintlayout.widget.ConstraintLayout>