<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/layout_round_corner"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/grid_object_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        android:transitionName="animeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,3:4"
        android:clipToOutline="true"
        android:background="@drawable/layout_round_corner"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/anime_score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/layout_round_corner_black_transparent"
        app:layout_constraintBottom_toBottomOf="@id/grid_object_image_view"
        app:layout_constraintEnd_toEndOf="@+id/grid_object_image_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_object_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/link_data_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"
            android:text="Title"
            app:layout_constraintTop_toBottomOf="@id/grid_object_image_view" />

        <TextView
            android:id="@+id/watchedEpisodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 | 10"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/link_data_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>