<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_round_corner_episode_list_object"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/episode_node_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToOutline="true"
        android:background="@drawable/layout_round_corner"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/episode_node_episode_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/layout_round_corner_episode"
        app:layout_constraintTop_toTopOf="@id/episode_node_image_view"
        app:layout_constraintStart_toStartOf="@id/episode_node_image_view"/>

    <TextView
        android:id="@+id/episode_node_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/episode_node_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/episode_node_image_view"
        app:layout_constraintTop_toTopOf="@id/episode_node_image_view" />

    <TextView
        android:id="@+id/episode_node_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/episode_node_image_view" />

    <TextView
        android:id="@+id/episode_node_filler_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filler"
        android:layout_margin="4dp"
        android:textSize="10sp"
        android:textColor="#FF5722"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>